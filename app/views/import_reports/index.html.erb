<div class="row mt-5">
<div class="col-sm">
  <h2>Import Reports</h2>

  <div class="row mt-5">
    <div class="col-sm">
      <span class="float-heading">
        &#x26A0;&nbsp;Flagged Import Runs:
        <span class="<%= @flagged_runs.total_count == 0 ? 'text-dark' : 'text-danger'%>">
          <strong><%= @flagged_runs.total_count %></strong>
        </span>
      </span><br/>
      <hr class="mt-3" />
      <% if @flagged_runs.total_count != 0 %>
        <p class="text-danger">Please review any flagged runs in order to re-enable imports from that repository.</p>
      <% end %>
      <%= paginate @flagged_runs, window: 2, param_name: :flagged_page %>
      <%= render partial: 'import_run_table', locals: { import_runs: @grouped_flags, is_flags: true } %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-sm">
      <span class="float-heading">Total Import Runs: <%= @all_runs.total_count %></span>
      <hr class="mt-5 mb-5" />
      <%= paginate @all_runs, window: 2, param_name: :report_page %>
      <%= render partial: 'import_run_table', locals: { import_runs: @grouped_runs } %>
    </div>
  </div>

</div>
